<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo_comeeting" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:gravity="center"
        android:text="Coworking goes social"
        android:textColor="#AAFFFFFF" />

    <TextView
        android:id="@+id/button_linked_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:background="@drawable/bt_blue_linked_in"
        android:drawableLeft="@drawable/ic_linked_in"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Connexion avec LinkedIn"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>