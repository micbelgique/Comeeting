<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:buttonStyle">@style/AppCompatButtonStyle</item>
        <item name="buttonStyle">@style/AppCompatButtonStyle</item>
    </style>

    <style name="AppCompatButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/color_primary_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
